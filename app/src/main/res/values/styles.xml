<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Customize your theme here. -->
<!--        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>-->
    </style>

<!--    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">-->
<!--        <item name="android:textColorPrimary">TITLE_COLOR_GOES_HERE</item>-->
<!--        <item name="android:textColorSecondary">SUBTITLE_COLOR_GOES_HERE</item>-->
<!--    </style>-->

    <style name="AppTheme.PopupOverlay" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomTextAppearance" parent="android:TextAppearance">
        <item name="android:textStyle">normal</item>
        <!-- Custom Attr-->
        <item name="fontPath">fonts/Poppins-Regular.ttf</item>
    </style>

    <!--Custom bold text appearance-->
    <style name="CustomTextAppearance.Bold" parent="CustomTextAppearance">
        <!-- Custom Attr-->
        <item name="fontPath">fonts/OpenSans-Bold.ttf</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--Custom semibold text appearance-->
    <style name="CustomTextAppearance.Semibold" parent="CustomTextAppearance">
        <item name="fontPath">fonts/Poppins-SemiBold.ttf</item>
    </style>

    <style name="primary_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
<!--        <item name="android:background">@drawable/background_button_selector_primary_color</item>-->
        <item name="android:textAppearance">@style/CustomTextAppearance</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_xlarge</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ratting_bar_selector" parent="Widget.AppCompat.RatingBar">
<!--        <item name="android:progressDrawable">@drawable/ratingbar_selector</item>-->
        <item name="android:stepSize">1.0</item>
        <item name="android:minHeight">19dp</item>
        <item name="android:maxHeight">20dp</item>
    </style>

    <style name="ratting_bar_selector2" parent="Widget.AppCompat.RatingBar">
<!--        <item name="android:progressDrawable">@drawable/ratingbar_selector</item>-->
        <item name="android:stepSize">1.0</item>
        <item name="android:minHeight">12dp</item>
        <item name="android:maxHeight">13dp</item>
    </style>


</resources>
