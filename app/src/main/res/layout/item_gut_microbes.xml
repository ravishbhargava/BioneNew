<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/spacing_very_tiny">

    <LinearLayout
        android:id="@+id/left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:background="@drawable/drawable_rectangle_low"
        android:gravity="center"
        android:orientation="vertical"

        android:weightSum="9">

        <TextView
            android:id="@+id/tvLeft"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/spacing_small"
            android:layout_weight="5"
            android:gravity="center"
            android:text="1.1%"
            android:paddingHorizontal="@dimen/spacing_normal"
            android:textAppearance="@style/CustomTextAppearance"
            android:textColor="@color/white"
            android:textSize="@dimen/font_normal" />

        <TextView
            android:id="@+id/tvBottom"
            android:layout_width="match_parent"
            android:layout_height="0dp"

            android:layout_weight="4"
            android:gravity="center"
            android:paddingHorizontal="@dimen/spacing_normal"
            android:paddingBottom="@dimen/spacing_tiny"
            android:text="1.1%"
            android:background="#66ffffff"
            android:textAppearance="@style/CustomTextAppearance"
            android:textColor="@color/white"
            android:textSize="@dimen/font_normal" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvCenter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/tvRight"
        android:layout_toRightOf="@+id/left"
        android:gravity="start"
        android:padding="@dimen/spacing_normal"
        android:text="Firmicutes/Bacteroidetes (F/B) Ratio"
        android:textAppearance="@style/CustomTextAppearance"
        android:textColor="@color/black"
        android:textSize="@dimen/font_small" />

    <TextView
        android:id="@+id/tvRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:padding="@dimen/spacing_normal"
        android:text="Bad for gut"
        android:textAppearance="@style/CustomTextAppearance"
        android:textColor="@color/black"
        android:textSize="@dimen/font_small" />
</RelativeLayout>