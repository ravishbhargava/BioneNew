<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/spacing_very_tiny">

    <RelativeLayout
        android:id="@+id/left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:background="@drawable/drawable_rectangle_low"
        android:gravity="center">

        <TextView
            android:id="@+id/tvLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minWidth="80dp"
            android:padding="@dimen/spacing_normal"
            android:text="5.555%"
            android:textAppearance="@style/CustomTextAppearance"
            android:textColor="@color/white"
            android:textSize="@dimen/font_normal" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tvCenter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_toLeftOf="@+id/tvRight"
        android:layout_toRightOf="@+id/left"
        android:gravity="start"
        android:padding="@dimen/spacing_normal"
        android:text="Firmicutes/Bacteroidetes (F/B) Ratio"
        android:textAppearance="@style/CustomTextAppearance"
        android:textColor="@color/black"
        android:textSize="@dimen/font_small" />

    <TextView
        android:id="@+id/tvRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:maxWidth="150dp"
        android:padding="@dimen/spacing_normal"
        android:text="Low "
        android:textAppearance="@style/CustomTextAppearance"
        android:textColor="@color/black"
        android:textSize="@dimen/font_small" />
</RelativeLayout>