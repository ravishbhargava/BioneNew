<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="250dp"
    android:layout_gravity="center"
    android:id="@+id/llVisible"
    android:layout_margin="4dp">

    <androidx.appcompat.widget.LinearLayoutCompat

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher_round" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginVertical="@dimen/spacing_tiny"
            android:gravity="center"
            android:text="Micro Biome"
            android:textAppearance="@style/CustomTextAppearance.Semibold"
            android:textSize="@dimen/font_small" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginVertical="@dimen/spacing_tiny"
            android:gravity="center"

            android:text="@string/by_signing_up_i_accept_the_terms_and_conditions"
            android:textSize="@dimen/font_tiny" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvLogin"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_margin="@dimen/spacing_tiny"
            android:background="@drawable/drawable_border_primary"
            android:gravity="center"
            android:text="View Details"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textAppearance="@style/CustomTextAppearance.Semibold"
            android:textColor="@color/white"
            android:textSize="@dimen/font_tiny" />


    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.cardview.widget.CardView>