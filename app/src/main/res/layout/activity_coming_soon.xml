<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:weightSum="10">


    <include layout="@layout/include_header" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_spacing_150"
            android:layout_marginHorizontal="@dimen/spacing_normal"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <com.bione.utils.CustomViewPager
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <me.relex.circleindicator.CircleIndicator
                android:id="@+id/indicator"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_spacing_50"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                app:ci_drawable="@mipmap/slider_circle_selected"
                app:ci_drawable_unselected="@mipmap/slider_circle_unselected"
                app:ci_height="@dimen/spacing_small"
                app:ci_width="@dimen/spacing_small" />
        </RelativeLayout>

        <fragment
            android:id="@+id/card_list_fragment"
            android:name="com.bione.ui.base.BannerCommon"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_spacing_150"
            android:layout_marginHorizontal="@dimen/spacing_normal" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvHead"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_spacing_50"
            android:layout_gravity="center"
            android:background="@color/white"
            android:gravity="center"
            android:text="My Food Advice"
            android:textAppearance="@style/CustomTextAppearance.Medium"
            android:textColor="@color/black"
            android:textSize="@dimen/font_large" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f2f2f2"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_xlarge"
                android:src="@drawable/ic_flat" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvBody"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingHorizontal="@dimen/spacing_normal"
                android:text="@string/dummy_text"
                android:textAppearance="@style/CustomTextAppearance"
                android:textSize="@dimen/font_normal" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvTerm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/tvLink"
                    android:gravity="center"
                    android:text="For more details contact  our expertise"
                    android:textAppearance="@style/CustomTextAppearance.Medium"
                    android:textSize="@dimen/font_small" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvLink"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="@dimen/spacing_normal"
                    android:background="@drawable/drawable_border_primary"
                    android:gravity="center"
                    android:minHeight="40dp"
                    android:text="Customer Support"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textAppearance="@style/CustomTextAppearance.Semibold"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_xlarge" />


            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>